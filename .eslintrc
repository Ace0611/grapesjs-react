{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  }
}
