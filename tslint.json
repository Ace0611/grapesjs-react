{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "docs/",
      "dist",
      "node_modules/",
      "build/",
      "README.md"
    ]
  },
  "rules": {
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "arrow-parens": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-shadowed-variable": true,
    "jsx-no-multiline-js": false
  }
}
