{
  "compilerOptions": {
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "build/",
    "src/**.{spec,test}.{ts,tsx}"
  ]
}
