{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "declaration": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": false,
    "jsx": "react"
  },
  "include": [
    "src/lib.tsx",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/*.{test,spec}.{ts,tsx}"
  ]
}
